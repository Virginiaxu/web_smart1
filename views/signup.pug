extends header

block content
	extends header 

block content
	div.container
		div.row
			div.col-md-6.col-md-offset-3
				p.form-head Join SMART to analyze your molecules!
				form(action="/upload" method="post" style="margin-bottom : 50px;" enctype="multipart/form-data")
					div(class="form-group" style="padding-top: 25px;")
						div.row
							div.col-xs-6
								label.form-label Choose Your Organization:
								select(class="form-control" id="organization" name="")
									option University
									option Company
									
							div.col-xs-6
								label.form-label Contributor Email :
								input(type="email" class="form-control" id="name" name="email")
						label.form-label Description :
						input(type="email" class="form-control" id="name" name="email")
						label.form-label Password : 
						input(type="password" class="form-control" id="name" name="password")
		
						button(type="submit" class="btn btn-default") Sign Up!


