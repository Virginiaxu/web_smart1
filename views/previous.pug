extends header_user
include ./mixins/previous-submission.pug

block content
	div(id="wrapper")
		div(id="sidebar-wrapper")
			ul(class="sidebar-nav")
				li
					a(href="#") Account
				li
					a(href="/user/upload") Submit a New Job
				li
					a(href="#") View Your Previous Submissions
				li
					a(href="/logout") Logout

		div(id="page-content-wrapper")
			div(class="container-fluid")
				div(class="row")
					div(class="col-lg-12")
						a(href="#" class="btn btn-success" id="menu-toggle") =
						-for(var index in jobs)
							-var mark = index%2
							+previous_submission(jobs[index],mark)

	script.
		$("#menu-toggle").click( function (e){
			e.preventDefault();
			$("#wrapper").toggleClass("menuDisplayed");
		});